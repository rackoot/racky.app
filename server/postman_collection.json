    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "connection_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "marketplace_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "product_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "platform",
      "value": "shopify",
      "type": "string"
    },
    {
      "key": "suggestion_id",
      "value": "",
      "type": "string"
    }
