{
  "name": "racky.app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "./dev.sh",
    "dev:stop": "docker compose -f docker-compose.dev.yml down",
    "dev:clean": "./dev-clean.sh",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:full": "docker compose -f docker-compose.full.yml up",
    "docker:full:build": "docker compose -f docker-compose.full.yml up --build",
    "docker:full:down": "docker compose -f docker-compose.full.yml down",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd server && npm run build && cd ../client && npm run build",
    "typecheck": "concurrently \"npm run typecheck:server\" \"npm run typecheck:client\"",
    "typecheck:server": "cd server && npm run typecheck",
    "typecheck:client": "cd client && npm run typecheck",
    "validate": "npm run typecheck"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
